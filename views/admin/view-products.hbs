
<section>
    <div class="container">
        <div class="">
        <div class="text-center">
            <a href="/admin/add-products"><button type="button" class="btn btn-primary add-products-btn">Add Products</button></a>
            <a href="/admin/rem-products"><button type="button" class="btn btn-primary rem-products-btn">Remove Products</button></a>
        </div>
        <table class="table mt-5" id="productsTable">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Options</th>
                    <th scope="col"> </th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
                    <td><a href="/admin/edit-products/{{this._id}}"><button type="button" class="btn btn-primary">Edit</button></a></td>
                    <td><a href="/admin/rem-products/{{this._id}}"><button type="button" class="btn btn-danger" onclick="return confirm('Are you sure?')">Remove</button></a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        </div>
    </div>
</section>



<script>
    $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>